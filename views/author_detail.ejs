<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
          <h1>Author: <%= author.name %></h1>
          <p><%= author.date_of_birth_formatted %> - <%= author.date_of_death_formatted %></p>
          <div style="margin-left: 20px; margin-top: 20px;">
            <h2 style="font-size: 1.5rem;">Books</h2>
            <% if (author_books.length) { %>
              <dl>
                <% author_books.forEach((book) => { %>
                  <dt>
                    <a href=<%= book.url %>>
                        <%= book.title %>
                    </a>
                  </dt>
                  <dd><%= book.summary %></dd>
                <% }); %>
              </dl>
            <% } else { %>
                <p>This author has no books.</p>
            <% } %>
          </div>
          <hr>
          <p>
            <a href=<%= `${author.url}/delete` %>>
              Delete author
            </a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
