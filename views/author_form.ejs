<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form method="post">
            <div class="form-group">
              <label for="first_name">First Name: </label>
              <input type="text" name="first_name" id="first_name"
              class="form-control" placeholder="First name (Christian)" required
              value=<%= author ? author.first_name : "" %> />
            </div>
            <div class="form-group">
              <label for="family_name">Family Name: </label>
              <input type="text" name="family_name" id="family_name"
              class="form-control" placeholder="Family name (Surname)" required
              value=<%= author ? author.family_name : "" %> />
            </div>
            <div class="form-group">
              <label for="date_of_birth">Date of Birth: </label>
              <input type="date" name="date_of_birth" id="date_of_birth"
              class="form-control" 
              value=<%= author.date_of_birth ? author.date_of_birth.toISOString().split("T")[0] : "" %> 
              />
            </div>
            <div class="form-group">
              <label for="date_of_death">Date of Death: </label>
              <input type="date" name="date_of_death" id="date_of_death"
              class="form-control"
              value=<%= author.date_of_death ? author.date_of_death.toISOString().split("T")[0] : "" %> 
              />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
          <% if (errors) { %>
            <ul>
             <% errors.forEach((error) => { %>
               <li><%= error.msg %></li>
             <% }); %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
