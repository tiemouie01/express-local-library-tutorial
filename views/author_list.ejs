<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <% if (author_list.length) { %>
            <ul>
              <% author_list.forEach((author) => { %>
                <li>
                  <a href=<%= author.url %>>
                    <%= author.name %> | <%= author.date_of_birth_formatted %> - <%= author.date_of_death_formatted %>
                  </a>
                </li>
              <% }); %>
            </ul>
          <% } else { %>
            <p>There are no authors.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
