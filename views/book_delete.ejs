<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <p><%= book.summary %></p>
          <% if (bookinstance_list.length) { %>
          <p>
            <strong>
              Delete the following book copies before attempting to delete this book.
            </strong>
          </p>
          <div style="margin-left: 20px; margin-top: 20px;">
            <h4>Copies</h4>
            <dl>
              <% bookinstance_list.forEach((instance) => { %>
                <dt>
                  <a href=<%= instance.url %>>
                    <%= book.title %>
                  </a>
                </dt>
                <dd>
                    <%= instance.imprint %>
                </dd>
              <% }); %>
            </dl>
          </div>
          <% } else { %>
            <p>Do you really want to delete this Book?</p>
            <form method="post">
              <div class="form-group">
                <input type="hidden" id="bookid" class="form-control"
                  name="bookid" value=<%= book._id %>>
              </div>
              <button class="btn btn-primary" type="submit">
                Delete
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
