<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
            <h1><%= title %></h1>
            <% if (book_list.length) { %>
             <ul>
                <% book_list.forEach((book) => { %>
                    <li>
                        <a href=<%= book.url %>>
                            <%= book.title %> | <%= book.author.name %>
                        </a>
                    </li>
                <% }); %>
             </ul>
            <% } else { %>
                <p>There are no books</p>
            <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
