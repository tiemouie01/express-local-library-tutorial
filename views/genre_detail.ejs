<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
          <h1>Genre: <%= genre.name %></h1>
          <div style="margin-left: 20; margin-top: 20px;">
            <h2 style="font-size: 1.5rem;">Books</h2>
            <% if (genre_books.length) { %>
             <dl>
              <% genre_books.forEach((book) => { %>
                <dt>
                  <a href=<%= book.url %>><%= book.title %></a>
                  <dd><%= book.summary %></dd>
                </dt>
              <% }); %>
             </dl>
            <% } else { %>
              <p>This genre has no books</p>
            <% } %>
          </div>
          <hr>
          <p>
            <a href=<%= `${genre.url}/delete` %>>
              Delete Genre
            </a>
          </p>
          <p>
            <a href=<%= `${genre.url}/update` %>>
              Update Genre
            </a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
