<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form method="post">
            <div class="form-group">
              <label for="name">Genre: </label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                placeholder="Fantasy, Poetry etc."
                required
                value=<%= genre === null  ? "" : genre.name %>
              />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
          <% if (errors) { %>
           <ul>
            <% errors.forEach((error) => { %>
              <li><%= error.msg %></li>
            <% }); %>
           </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
