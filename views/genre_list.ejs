<!DOCTYPE html>
<html lang="en">
  <%- include("./head") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("./sidebar") %>
        <div class="col-sm-10">
            <h1><%= title %></h1>
          <% if (genre_list.length) { %>
           <ul>
            <% genre_list.forEach((genre) => { %>
              <li>
                <a href=<%= genre.url %>>
                  <%= genre.name %>
                </a>
              </li>
            <% }); %>
           </ul>
          <% } else { %>
            <p>There are no genres in this library.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
